<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.eclipse.scava.crossflow.restmule</groupId>
    <artifactId>org.eclipse.scava.crossflow.restmule.parent</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <relativePath>..</relativePath>
  </parent>

  <groupId>org.eclipse.scava.crossflow.restmule</groupId>
  <artifactId>org.eclipse.scava.crossflow.restmule.dependencies</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>eclipse-plugin</packaging>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <id>clean-lib-folder</id>
            <phase>clean</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <delete>
                  <fileset dir="lib" includes="*/" />
                </delete>
                <echo>Deleted lib folder</echo>
              </target>
            </configuration>            
          </execution>      
          <execution>
            <id>clean-ivy</id>
            <phase>clean</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target description="Purge ivy cache" xmlns:ivy="antlib:org.apache.ivy.ant">
                <ivy:cleancache/>
              </target>
            </configuration>            
          </execution>
          <execution>
            <id>fetch-deps</id>
            <phase>generate-resources</phase>
            <configuration>
              <target xmlns:ivy="antlib:org.apache.ivy.ant">	
				<ivy:retrieve pattern="lib/[type]s/[artifact]-[revision](-[classifier]).[ext]"/>
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
	  <dependency>
	    <groupId>org.apache.ivy</groupId>
	    <artifactId>ivy</artifactId>
	    <version>2.4.0</version>
	  </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>